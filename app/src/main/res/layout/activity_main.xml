<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.PlaylistMaker.MainActivity"
    style="@style/activity_container"
    android:paddingBottom="28dp">

    <TextView
        style="@style/activity_title"
        android:text="@string/app_name"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/main_menu_divider">

        <Button
            android:id="@+id/main_menu_search"
            style="@style/main_activity_button"
            app:icon = "@drawable/ic_search"
            app:iconGravity="textStart"
            android:text="@string/main_menu_search"
            />

        <Button
            android:id="@+id/main_menu_media"
            style="@style/main_activity_button"
            app:icon = "@drawable/ic_mediateka"
            app:iconGravity="textStart"
            android:text="@string/main_menu_media"
            />

        <Button
            android:id="@+id/main_menu_settings"
            style="@style/main_activity_button"
            app:icon = "@drawable/ic_settings"
            app:iconGravity="textStart"
            android:text="@string/main_menu_settings"
            />
    </LinearLayout>
</LinearLayout>