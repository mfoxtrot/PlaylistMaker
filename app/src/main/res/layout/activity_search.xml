<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.PlaylistMaker"
    style="@style/activity_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id = "@+id/back_button"
            style="@style/activity_back_arrow"
            android:layout_gravity="center"/>
        <TextView
            style="@style/activity_title"
            android:text="@string/main_menu_search"
            android:layout_marginLeft="28dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="36dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:backgroundTint="?attr/colorContainer"
        android:fontFamily="@font/ys_display_regular"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSecondary"
        android:height="36dp"
        android:background="@drawable/rounded_text_box"
        android:hint="@string/search_box_hint"
        android:textColorHint="?attr/colorOnContainer"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="?attr/colorOnContainer"
        android:drawablePadding="8dp"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:singleLine="true"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:visibility="gone"
        tools:listitem="@layout/track_card"
        />

    <LinearLayout
        android:id="@+id/no_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="?attr/no_search_results_placeholder"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="400"
            android:textColor="?attr/colorOnPrimary"
            android:text="@string/no_results"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/no_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="?attr/no_connection_placeholder"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="400"
            android:textColor="?attr/colorOnPrimary"
            android:text="@string/connection_problem"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="400"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="center"
            android:text="@string/download_failed"
            />
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="14sp"
            android:textFontWeight="500"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/refresh"
            android:textAllCaps="false"
            app:cornerRadius = "54dp"
            android:backgroundTint="?attr/refresh_button_background_color"
            android:textColor="?attr/refresh_button_text_color"
            />

    </LinearLayout>
</LinearLayout>