<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.PlaylistMaker"
    style="@style/activity_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id = "@+id/back_button"
            style="@style/activity_back_arrow"
            android:layout_gravity="center"/>
        <TextView
            style="@style/activity_title"
            android:text="@string/main_menu_search"
            android:layout_marginLeft="28dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="36dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:backgroundTint="?attr/colorContainer"
        android:fontFamily="@font/ys_display_regular"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSecondary"
        android:height="36dp"
        android:background="@drawable/rounded_text_box"
        android:hint="@string/search_box_hint"
        android:textColorHint="?attr/colorOnContainer"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="?attr/colorOnContainer"
        android:drawablePadding="8dp"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:singleLine="true"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:paddingTop="16dp"
        tools:listitem="@layout/track_card"
        />
</LinearLayout>