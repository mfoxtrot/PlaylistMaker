<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="14dp"
    android:paddingLeft="16dp"
    android:paddingRight="21dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id = "@+id/back_button"
            android:src="@drawable/ic_back_arrow"
            android:backgroundTint="@color/menu_text"
            android:layout_width = "16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:foreground="?attr/selectableItemBackground"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="@string/main_menu_settings"
            android:fontFamily="@font/ysdisplay_font"
            android:textSize="22sp"
            android:textColor="@color/menu_text"
            android:textFontWeight="500"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/settings_menu_item_padding"
            android:paddingBottom="@dimen/settings_menu_item_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/settings_menu_black_theme"
                android:fontFamily="@font/ysdisplay_font"
                android:textSize="@dimen/settings_menu_text_size"
                android:textColor="@color/settings_menu_text"
                android:textFontWeight="400"
                android:layout_weight="1"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/settings_menu_item_padding"
            android:paddingBottom="@dimen/settings_menu_item_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_menu_share_app"
                android:fontFamily="@font/ysdisplay_font"
                android:textSize="@dimen/settings_menu_text_size"
                android:textColor="@color/settings_menu_text"
                android:textFontWeight="400"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/shareAppIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/settings_menu_item_padding"
            android:paddingBottom="@dimen/settings_menu_item_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_menu_write_to_support"
                android:fontFamily="@font/ysdisplay_font"
                android:textSize="@dimen/settings_menu_text_size"
                android:textColor="@color/settings_menu_text"
                android:textFontWeight="400"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/supportIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_support"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/settings_menu_item_padding"
            android:paddingBottom="@dimen/settings_menu_item_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_menu_user_agreement"
                android:fontFamily="@font/ysdisplay_font"
                android:textSize="@dimen/settings_menu_text_size"
                android:textColor="@color/settings_menu_text"
                android:textFontWeight="400"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/userAgreementIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_submenu"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>