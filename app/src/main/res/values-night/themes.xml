<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorSurface">@color/white_000</item>
        <item name="colorContainer">@color/white_000</item>
        <item name="colorOnContainer">@color/black_500</item>
        <item name="colorOnSecondary">@color/black_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PlaylistMaker.MainActivity" parent="Theme.PlaylistMaker">
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorOnPrimary">@color/white_000</item>
        <item name="colorSecondary">@color/white_000</item>
        <item name="colorOnSecondary">@color/black_500</item>
    </style>
</resources>