<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Общие стили-->
    <style name="activity_container">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="activity_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="activity_back_arrow">
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <!--Стили экранов-->
    <style name="main_activity_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="iconPadding">@dimen/main_menu_icon_padding</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">@dimen/main_menu_button_corner_radius</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/main_menu_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settings_activity_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/settings_menu_item_padding</item>
        <item name="android:paddingBottom">@dimen/settings_menu_item_padding</item>
    </style>
    <style name="settings_activity_list_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="settings_activity_list_item_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/colorSurface</item>
    </style>
    <style name="search_activity_track_title">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="search_activity_track_subtitle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

</resources>