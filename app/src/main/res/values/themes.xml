<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_000</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSurface">@color/gray_500</item>
        <item name="colorContainer">@color/gray_200</item>
        <item name="colorOnContainer">@color/gray_500</item>
        <item name="colorOnSecondary">@color/black_500</item>
        <item name="colorSecondaryVariant">@color/gray_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="no_search_results_placeholder">@drawable/ic_no_search_results_light</item>
        <item name="no_connection_placeholder">@drawable/ic_no_connection_light</item>

        <!--Special colors-->
        <item name="refresh_button_background_color">@color/black_500</item>
        <item name="refresh_button_text_color">@color/white_000</item>
        <item name="player_details_property_name_color">@color/gray_500</item>
        <item name="player_details_property_value_color">@color/black_500</item>
        <item name="player_time_countdown_color">@color/black_500</item>
        <item name="player_play_button_background_color">@color/black_500</item>
        <item name="player_add_to_playlist_button_background_color">@color/black_500</item>
        <item name="player_add_to_favorites_button_background_color">@color/black_500</item>
        <item name="player_artist_name_color">@color/black_500</item>
        <item name="player_track_name_color">@color/black_500</item>
        <item name="progress_bar_color">@color/blue_500</item>
    </style>

    <style name="Theme.PlaylistMaker.MainActivity" parent="Theme.PlaylistMaker">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white_000</item>
        <item name="colorSecondary">@color/white_000</item>
        <item name="colorOnSecondary">@color/black_500</item>
    </style>
</resources>